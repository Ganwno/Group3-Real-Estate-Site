#   Partial to display the favourites for the user
%>

<h1 class="ui center aligned">Favourites</h1>
<div class="ui items">
	<% favourites = get_favourites_object_array %>
	<% if favourites %>
		<% favourites.each do |fav| %>
			<% listing = get_favourites_listing_details_address(fav.favourite_listing_id) %>
				<div class="item">
					<div class="image">
						<img src="">
					</div>
					<div class="content">
						<a class="header"><%= listing %></a>
						<div class="meta">
							<span>Description</span>
						</div>
						<div class="description">
							<p></p>
						</div>
						<div class="extra">
							Additional Details
						</div>
					</div>
				</div>
			<% end %>
		<% end %>
</div>