#   Partial to display the favourites for the user
%>

<h1 class="ui center aligned">Favourites</h1>
<div class="ui items">
	<% favourites = get_favourites_object_array %>
	<% if favourites %>
		<% favourites.each do |fav| %>
			<% listing = get_listing_details(fav.favourite_listing_id) %>
				<div class="item">
					<div class="image">
					<%# image_tag listing[0].listing_cover_image.image.url(:medium) %>
					</div>
					<div class="content">
						<a class="header"><%= listing[0].listing_address %></a>
						<div class="meta">
							<span>Description</span>
						</div>
						<div class="description">
							<p><%= listing[0].listing_description %></p>
						</div>
						<div class="extra">
							Additional Details
						</div>
					</div>
				</div>
		<% end %>
	<% end %>
</div>