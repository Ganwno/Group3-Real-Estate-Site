<% title "Propertydome Contact" %>
<section class="search-section"></section>
<section class="contact-container">
	<h1 id="welcome" class="bold-text">Get In Touch</h1>
	<div class="ui grid stackable nice">
		<section id="contact-section-1" class="eight wide column">
			<%= form_tag send_mail_path, class: "ui inverted form" do %>
				<h1 class="bold-text">Send a Message</h1>
				<div class="fields">
					<div class="six wide field required field">
						<label>First Name</label>
						<%= text_field_tag :first_name, nil, placeholder: "First Name" %>
					</div>
					<div class="six wide field">
						<label>Last Name</label>
						<%= text_field_tag :last_name, nil, placeholder: "Last Name" %>
					</div>
				</div>
				<div class="twelve wide field required field">
					<label>Email</label>
					<%= email_field_tag :email, nil, placeholder: "email@address.com" %>
					<h2 id="result"></h2>
				</div>
				<div class="twelve wide field required field">
					<label>Subject</label>
					<%= select_tag :subject, options_for_select(["General Enquiry", "Report Bug", "Other", "Sales", "Security", "Disputes"], "General Enquiry"), { class: "ui dropdown", id: "contact-type-selector" } %>
				</div>
				<div class="fields">
					<div class="fourteen wide field required field">
						<label>Text</label>
						<%= text_area_tag :message, nil, placeholder: "Write in here to send us your thoughts" %>
					</div>
				</div>
				<%= button_tag type: "submit", class: "ui big button", id: "contact-submit-button" do %>
						Send
					<% end %>
				<div class="ui error message"></div>
			<% end %>
		</section>
		<section id="contact-section-2" class="eight wide column">
			<div id="top-bottom">
				<h1 class="bold-text">Contact Information</h1>
				<h3 class="bold-text">Email:</h3>
				<p class="email"></p>
				<h3 class="bold-text">Phone:</h3>
				<p class="phone"></p>
			</div>

			<div class="ui three wide center aligned column bottom-bottom">
				<button class="ui massive circular facebook icon button">
					<i class="facebook icon"></i>
				</button>
				<button class="ui massive circular twitter icon button">
					<i class="twitter icon"></i>
				</button>
				<button class="ui massive circular google plus icon button">
					<i class="google plus icon"></i>
				</button>
			</div>
		</section>
	</div>
</section>
