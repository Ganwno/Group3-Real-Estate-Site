<div class="ui card property-card">
	<div class="content">
		<h3 class="ui header">
			<%# address %>
			<%= link_to "72 Bolton Avenue Applecross WA", url_for("72-bolton-avenue-applecross-wa"), class: "title-link" %>
			<div class="property-info">
			<%# num of bedrooms %>
			<i class="large bed icon"></i> <span>4</span>
			<%# num of bathrooms %>
			<i class="large bed icon"></i> <span>3</span>
			<%# num of carspaces %>
			<i class="large car icon"></i> <span>2</span>
		</div>
		</h3>
	</div>
	<div class="ui fluid image">
		<%# is favorited, if so add class to i favd %>
		<a class="ui left corner label fav-property"><i class="star icon"></i></a>
		<%# status of property, might be handy for this to include a link to property page %>
		<a class="ui red right ribbon label">Sold</a>
		<%# img its also a link needs to be changed to url for actual link of property object %>
		<%= link_to url_for("72-bolton-avenue-applecross-wa") do %>
			<%= image_tag "propertyimagetemp.png", alt: "Property Image" %>
		<% end %>
	</div>
	<div class="content">
		<h2>
			<%# price %>
			$600, 000
			<span class="right floated property-info-stats">
				<span>
					<%# num of favourites on property %>
					<i class="star icon"></i> 17 favourites
				</span>
				<span>
					<%# num of comments on property %>
					<i class="comment icon"></i> 3 comments
				</span>
			</span>
		</h3>
	</div>
	<div class="extra content tag-field">
		<div class="ui large transparent left">
			<%# tags:
				sell-feature-tag is purple
				location-feature-tag & property-feature-tag is blue
			 	price-feature-tag is red %>
			<div class="ui sell-feature-tag label">Home Theatre</div>
			<div class="ui sell-feature-tag label">NBN</div>
			<div class="ui sell-feature-tag label">Pool</div>
			<div class="ui sell-feature-tag label">Front Garden</div>
			<div class="ui sell-feature-tag label">Back Garden</div>
			<div class="ui location-feature-tag label">1.3km from your Work</div>
			<div class="ui property-feature-tag label">5.1km from Schools</div>
			<div class="ui location-feature-tag label">2.3km from Shopping Centre</div>
		</div>
	</div>
	<div class="extra content">
		<div class="ui large transparent right">
			<div class="ui three column very relaxed grid">
				<div class="column">
					<%# time since posted only hours, then only days %>
					<div class="left floated meta">14h</div>
				</div>
				<%# USER image/link %>
				<%# profile path will need to change for profile/:id %>
				<div class="right floated middle aligned column user-column">
					<%= link_to url_for("72-bolton-avenue-applecross-wa")  do %>
						<%= image_tag "userprofile-header.png", alt: "User Profile Image", class: "ui avatar image" %>
						<span>Ron Swanson</span>
					<% end %>
				</div>
				<%# COMPANY image/link %>
				<%# profile path will need to change for profile/:id %>
				<div class="right floated middle aligned column company-column">
					<%= link_to url_for("72-bolton-avenue-applecross-wa") do %>
						<%= image_tag "userprofile-header.png", alt: "User Profile Image", class: "ui tiny image" %>
						<span>Rons Realestate</span>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>